<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/father">

    <ImageView
        android:id="@+id/image_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:src="@drawable/img_0"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image_11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/image_00"
        android:layout_marginTop="79dp"
        android:src="@drawable/img_1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image_22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_00"
        android:layout_marginTop="79dp"
        android:src="@drawable/img_2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image_33"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="79dp"
        android:layout_toRightOf="@id/image_00"
        android:src="@drawable/img_3"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image_44"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="79dp"
        android:layout_toLeftOf="@id/image_00"
        android:src="@drawable/img_4"
        android:visibility="visible" />

    <Button
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="@dimen/fifty"
        android:layout_marginBottom="@dimen/fifty"
        android:onClick="visibleNext"
        android:text="▶️"
        android:textSize="34sp" />

    <Button
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/fifty"
        android:layout_marginBottom="@dimen/fifty"
        android:onClick="visiblePrevios"
        android:text="◀️"
        android:textSize="34sp" />


</RelativeLayout>