<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/enter_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_field">

        <Button
            android:id="@+id/mull"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Ã—"
            android:onClick="mul"
            android:textSize="14sp" />

        <Button
            android:id="@+id/divv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="/"
            android:onClick="div"
            android:textSize="14sp" />

        <Button
            android:id="@+id/addd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="+"
            android:onClick="add"
            android:textSize="14sp" />

        <Button
            android:id="@+id/subb"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="-"
            android:onClick="sub"
            android:textSize="14sp" />

        <Button
            android:id="@+id/equals"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="="
            android:onClick="equalS"
            android:textSize="14sp" />

        <Button
            android:id="@+id/del"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:text="X"
            android:onClick="deletE"
            android:textSize="14sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <Button
            android:id="@+id/table_cell_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="7"
            android:onClick="seven"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="8"
            android:onClick="eight"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="9"
            android:onClick="nine"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            android:onClick="four"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            android:onClick="five"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            android:onClick="six"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="1"
            android:onClick="one"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="2"
            android:onClick="two"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="3"
            android:onClick="three"
            android:textSize="34sp" />

        <Button
            android:id="@+id/table_cell_31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0"
            android:onClick="zero"
            android:textSize="34sp" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>